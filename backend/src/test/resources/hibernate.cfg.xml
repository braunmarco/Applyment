<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:postgresql://localhost/test</property> <!-- BD Mane -->
        <property name="connection.driver_class">org.postgresql.Driver</property> <!-- DB Driver -->
        <property name="connection.username">Marco</property> <!-- DB User -->
        <property name="connection.password"></property> <!-- DB Password -->

        <property name="dialect">org.hibernate.dialect.PostgresPlusDialect</property> <!-- DB Dialect -->
        <property name="hbm2ddl.auto">update</property> <!-- create / create-drop / update -->

        <property name="show_sql">true</property> <!-- Show SQL in console -->
        <property name="format_sql">true</property> <!-- Show SQL formatted -->

        <property name="hibernate.enable_lazy_load_no_trans">true</property>

        <mapping class="de.braun.domain.Person"/>
        <mapping class="de.braun.domain.Address"/>
        <mapping class="de.braun.domain.CurriculumVitae"/>
        <mapping class="de.braun.domain.Position"/>
        <mapping class="de.braun.domain.PositionDetail"/>

        <!--        <mapping class="de.braun.domain.Project"/>
                <mapping class="de.braun.domain.Technology"/>
                <mapping class="de.braun.domain.PositionRegister"/>
        -->
    </session-factory>
</hibernate-configuration>